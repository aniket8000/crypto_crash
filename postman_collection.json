{
  "info": {
    "_postman_id": "crypto-crash-api",
    "name": "Crypto Crash API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Place Bet",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": { "raw": "http://localhost:3000/api/bet", "host": ["localhost"], "port": "3000", "path": ["api", "bet"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"playerId\": \"<playerId>\",\n  \"usdAmount\": 10,\n  \"currency\": \"BTC\"\n}"
        }
      }
    },
    {
      "name": "Cash Out",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": { "raw": "http://localhost:3000/api/cashout", "host": ["localhost"], "port": "3000", "path": ["api", "cashout"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"playerId\": \"<playerId>\"\n}"
        }
      }
    },
    {
      "name": "Get Wallet",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/api/wallet/<playerId>",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "wallet", "<playerId>"]
        }
      }
    }
  ]
}
